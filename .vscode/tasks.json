{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build clox",
      "command": "/opt/homebrew/opt/llvm/bin/clang",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "${workspaceFolder}/src/*.c",
        "-o",
        "${workspaceFolder}/bin/clox"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
  ],
  "version": "2.0.0"
}